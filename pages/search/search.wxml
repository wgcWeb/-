<view class="searchContainer">
  <!-- 头部搜索区域 -->
  <view class="header">
    <view class="searchInput">
      <text class="iconfont icon-search3"></text>
      <input type="text" value="{{searchContent}}" placeholder="{{placeholderContent}}" placeholder-class="placeholder" bindinput="handleInputChange" bindconfirm='handleSearchConfirm'
      confirm-type='search'/>
      <text class="iconfont icon-shanchu" bindtap="clearSearchContent" hidden="{{!searchContent}}"></text>
    </view>
    <text class="cancel">取消</text>
  </view>
  <block wx:if="{{searchList.length}}">
    <!-- 搜索内容展示 -->
    <view class="showSearchContent">
      <view class="searchContent">搜索内容: {{searchContent}}</view>
      <view class="searchList">
        <view class="searchItem" wx:for="{{searchList}}" wx:key="id">
          <text class="iconfont icon-search3"></text>
          <text>{{item.name}}</text>
        </view>
      </view>
    </view>
  </block>
  <block wx:else>
    <!-- 搜索历史纪录 -->
    <view class="history" wx:if="{{historyList.length > 0}}">
      <view class="history-title">
        <view class="title">历史</view>
        <text class="iconfont icon-shanchu2" bindtap="handleRemove"></text>
      </view>
      <view class="history-box">
        <view class="historyItem" wx:for="{{historyList}}" wx:key="item">{{item}}</view>
      </view>
    </view>
    <!-- 热搜榜 -->
    <view class="hotContainer">
      <view class="title">热搜榜</view>
      <!-- 热搜列表 -->
      <view class="hotList">
        <view class="hotItem" wx:for="{{hotList}}" wx:key="searchWord">
          <text class="order">{{index + 1}}</text>
          <text class="order">{{item.searchWord}}</text>
          <image wx:if="{{item.iconUrl}}" src="{{item.iconUrl}}" />
        </view>
      </view>
    </view>
  </block>
</view>