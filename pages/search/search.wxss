/* pages/search/search.wxss */
.searchContainer {
  padding: 0 20rpx;
}
.searchContainer .header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchContainer .header .searchInput {
  position: relative;
  flex: 1;
  background: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
}
.searchContainer .header .searchInput text:nth-child(1) {
  position: absolute;
  left: 15rpx;
}
.searchContainer .header .searchInput input {
  margin-left: 60rpx;
  height: 60rpx;
}
.searchContainer .header .searchInput .placeholder {
  font-size: 28rpx;
}
.searchContainer .header .searchInput text:nth-child(3) {
  position: absolute;
  right: 30rpx;
  top: 0;
  z-index: 10;
  font-size: 30rpx;
}
.searchContainer .header .cancel {
  width: 100rpx;
  text-align: center;
}
.searchContainer .showSearchContent .searchContent {
  color: #d43c33;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.searchContainer .showSearchContent .searchList .searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchContainer .showSearchContent .searchList .searchItem text:nth-child(2) {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.searchContainer .history {
  margin-top: 20rpx;
}
.searchContainer .history .history-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.searchContainer .history .history-title .title {
  font-size: 28rpx;
}
.searchContainer .history .history-box {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0 10rpx 0;
}
.searchContainer .history .history-box .historyItem {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  background-color: #ededed;
  margin: 0 20rpx 20rpx 0;
  padding: 0 30rpx;
  border-radius: 20rpx;
}
.searchContainer .hotContainer .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.searchContainer .hotContainer .hotList {
  display: flex;
  flex-wrap: wrap;
}
.searchContainer .hotContainer .hotList .hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.searchContainer .hotContainer .hotList .hotItem .order {
  margin: 0 10rpx;
}
.searchContainer .hotContainer .hotList .hotItem image {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
