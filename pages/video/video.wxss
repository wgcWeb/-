.video-container .header {
  display: flex;
  align-items: center;
}
.video-container .header image:nth-child(1) {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.video-container .header .search {
  flex: 1;
  border: 1rpx solid #eee;
  margin-left: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.video-container .header image:nth-child(3) {
  display: inline-block;
  width: 140rpx;
  height: 100rpx;
}
.video-container .nav-scroll {
  display: flex;
  white-space: nowrap;
  height: 64rpx;
}
.video-container .nav-scroll .nav-item {
  padding: 0 20rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.video-container .nav-scroll .nav-item .active {
  border-bottom: 4rpx solid #d43c33;
}
.video-container .video-scroll {
  height: calc(100vh - 164rpx);
  padding: 20rpx;
  box-sizing: border-box;
}
.video-container .video-scroll .video-item .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.video-container .video-scroll .video-item .content {
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.video-container .video-scroll .video-item .footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  border-top: 1rpx solid #eee;
}
.video-container .video-scroll .video-item .footer .img-top {
  display: flex;
  align-items: center;
}
.video-container .video-scroll .video-item .footer .img-top image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.video-container .video-scroll .video-item .footer .comments_praised {
  display: flex;
  align-items: center;
}
.video-container .video-scroll .video-item .footer .comments_praised .item {
  margin-right: 20rpx;
}
.video-container .video-scroll .video-item .footer .comments_praised .item text:nth-child(1) {
  font-size: 40rpx;
}
.video-container .video-scroll .video-item .footer .comments_praised .item .count {
  position: relative;
  top: -20rpx;
  font-size: 24rpx;
}
.video-container .video-scroll .video-item .footer .comments_praised .btn-share {
  display: flex;
  justify-content: center;
  width: 10rpx;
  padding: 20rpx;
  background-color: #fff;
}
